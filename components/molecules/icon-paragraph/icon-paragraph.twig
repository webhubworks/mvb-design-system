{% set icon = icon is defined and icon.name is defined ? icon : null %}

<div data-component="molecules.icon-paragraph" class="flex justify-center flex-col sm:flex-row sm:justify-start items-center gap-4 sm:gap-8">

    {% if icon %}
        {{ render('atoms.icon', {name: icon.name, attributes: {class: 'text-2xl md:text-3xl'}}) }}
    {% endif %}

    <div class="rich-text">
        {{ contentHtml|raw }}
    </div>

</div>
