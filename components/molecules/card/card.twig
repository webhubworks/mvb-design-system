{% set badge = badge|default({text: null, iconName: null}) %}
{% set logoImgSrc = logoImgSrc|default(null) %}
{% set accentColor = accentColor|default(null) %}
{% set _accentColorClasses = accentColor ? 'border-b-3 border-('~accentColor~')' : '' %}
{% set _missingImage = "data:image/svg+xml;base64," %}
{% set img = img|default({src: _missingImage}) %}

{% set attributeCollection = attributes|default({})|collect() %}
{% set _additionalClasses = attributeCollection.get('class') %}
{% set _additionalAttributes = attributeCollection.forget(['class']).toArray() %}

<div data-component="molecules.card" class="bg-white {{ href is defined and href is not empty ? 'hover:bg-white/65 hover:cursor-pointer' }} group relative flex flex-col {{ _additionalClasses }}" {{ attributesToHtml(_additionalAttributes) }}>
    <div class="relative overflow-hidden {{ _accentColorClasses }}">
        {% if badge.text %}
            <div class="flex items-center space-x-2 absolute right-0 top-4 max-w-2/3 text-white bg-primary px-2 py-1.5 z-10">
                {% if badge.iconName %}
                    {{ render('atoms.icon', {name: badge.iconName, size: 'sm'}) }}
                {% endif %}
                <div title="{{ badge.text }}" class="uppercase whitespace-nowrap text-xs truncate font-semibold">{{ badge.text }}</div>
            </div>
        {% endif %}
        <figure class="relative">
            <img src="{{ img.src }}" width="{{ img.width ?? ''}}" height="{{ img.height ?? '' }}" alt="{{ img.alt ?? '' }}"
                 class="w-full">
            <figcaption class="absolute bg-cobblestone/50 z-10 -rotate-90 translate-x-full origin-bottom-left right-0 px-2 py-1 bottom-0 text-sm text-white whitespace-nowrap truncate max-w-[200px]" title="{{ img.caption ?? '' }}">
                {{ img.caption ?? '' }}
            </figcaption>
        </figure>
    </div>
    <div class="p-3">
        {% if logoImgSrc %}
            <img src="{{ logoImgSrc }}" alt="Logo" class="mb-3 mt-2 h-5">
        {% endif %}
        {% if href is defined and href is not empty %}
            <a href="{{ href }}" class="before:content-[''] before:absolute before:inset-0 break-word group-hover:cursor-pointer">{{ content }}</a>
            {% else %}
                {{ content }}
        {% endif %}

    </div>
    {{ footerHtml|default('')|raw }}
</div>

