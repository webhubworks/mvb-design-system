<div class="space-y-2">
{% for item in items  %}
    <details data-component="molecules.accordion" name="{{ itemGroupLabel ?? item.summary }}" class="group">
        <summary class="flex appearance-none bg-white cursor-pointer items-center justify-between">
            <span class="text-xl font-bold group-hover:text-primary px-3"> {{ item.summary }}</span>
            <span class="text-cobblestone-800 group-open:bg-primary group-open:text-white text-xl px-2 py-1 group-hover:bg-primary group-hover:text-white group-focus-within:bg-primary group-focus-within:text-white">
                {{ render('atoms.icon', {name: 'chevron-down', attributes: {class: 'transform group-open:rotate-180 transition-transform duration-300'}}) }}
            </span>
        </summary>
        <div class="p-3">
            {{ item.detailsHtml|default('')|raw }}
        </div>
    </details>
{% endfor %}
</div>