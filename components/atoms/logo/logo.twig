{% set brand = brand|default(null) %}

{% set attributeCollection = attributes|default({})|collect() %}
{% set additionalClasses = attributeCollection.get('class') %}
{% set additionalAttributes = attributeCollection.forget(['class']).toArray() %}

{% set logos = {
    'MVB': '@mvbDesignSystemAssets/logos/mvb.svg',
    'VLB': '@mvbDesignSystemAssets/logos/vlb.svg',




} %}

{% set logoPath = logos[brand]|default(null) %}

{% if logoPath %}
    <img alt="{{ 'Logo of'|t('mvbdesignsystem') }} {{ brand }}" src="{{ alias(logoPath) }}"
         class="{{ additionalClasses }}" {{ attributesToHtml(additionalAttributes) }} />
{% endif %}
