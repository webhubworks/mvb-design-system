{% set attributeCollection = attributes|default({})|collect() %}
{% set _additionalClasses = attributeCollection.get('class') %}
{% set _additionalAttributes = attributeCollection.forget(['class']).toArray() %}
{% set _isCkeditor = attributeCollection.get('ckeditor')|default(false) %}

<div data-component="atoms.paragraph" class="rich-text {{ _additionalClasses }}" {{ attributesToHtml(_additionalAttributes) }}>
    {{ contentHtml|raw }}
</div>