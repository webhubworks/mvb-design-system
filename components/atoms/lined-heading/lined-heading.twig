{% set attributeCollection = attributes|default({})|collect() %}
{% set additionalClasses = attributeCollection.get('class') %}
{% set additionalAttributes = attributeCollection.forget('class').toArray() %}

<div class="flex items-center {{ additionalClasses }}" {{ attributesToHtml(additionalAttributes) }}>
    {{ render('atoms.heading', {
        text: text,
        level: level|default(null),
        visualLevel: visualLevel|default(null),
        attributes: {
            class: 'sm:shrink-0 sm:max-w-[80%]',
        }
    }) }}
    <span class="ml-4 h-0.5 w-full bg-primary hidden sm:inline"></span>
</div>
